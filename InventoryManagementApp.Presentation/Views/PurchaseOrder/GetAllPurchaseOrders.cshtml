@using InventoryManagementApp.Presentation.Models.ViewModels.PurchaseOrderVMs;

@{
    ViewData["Title"] = "GetAllPurchaseOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<PurchaseOrderListVM>

@if (TempData["error"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center" style="margin-bottom:16px">
            <a class="btn btn-success" asp-action="Create" asp-controller="PurchaseOrder">Add PurchaseOrder</a>
        </div>
        <div class="table-responsive">
            <table class="table" id="example">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Status</th>
                        <th scope="col">PurchaseOrderTotal</th>
                        <th scope="col">TaxTotal</th>
                        <th scope="col">Currency</th>
                        <th scope="col">SupplierName</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var po in Model)
                    {
                        <tr>
                            <th scope="row">@po.ID</th>
                            <td>@po.Status</td>
                            <td>@po.PurchaseOrderTotal</td>
                            <td>@po.TaxTotal</td>
                            <td>@po.Currency</td>
                            <td>@po.SupplierName</td>
                            <td class="text-center">
                                <a class="btn pt-0" asp-action="UpdateDetails" asp-controller="PurchaseOrder" asp-route-id="@po.ID" type="button" data-toggle="popover" title="Update">
                                    <i class="far fa-edit" style="color:coral;font-size:20px"></i>
                                </a>
                                <a class="btn pt-0" asp-action="Details" asp-controller="PurchaseOrder" asp-route-id="@po.ID" asp-route-active=true type="button" data-toggle="popover" title="Details">
                                    <i class="fas fa-search" style="color: dodgerblue; font-size: 20px;"></i>
                                </a>
                                <a class="btn pt-0" asp-action="Delete" asp-controller="PurchaseOrder" asp-route-id="@po.ID" type="button" data-toggle="popover" title="Delete" asp-route-active=false>
                                    <i class="far fa-trash-alt" style="color:red;font-size:20px"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(document).ready(function () {
            $('#example').DataTable;
        });
    });
</script>

